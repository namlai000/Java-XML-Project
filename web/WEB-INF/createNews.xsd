<xsd:schema version="1.0"
            xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            elementFormDefault="qualified">
    <xsd:simpleType name="Max300-NotEmpty">
        <xsd:restriction base="xsd:string">
            <xsd:maxLength value="300" />
            <xsd:minLength value="1"/>
            <xsd:whiteSpace value="collapse"/>
        </xsd:restriction>
    </xsd:simpleType>
    <xsd:simpleType name="NotEmpty">
        <xsd:restriction base="xsd:string">
            <xsd:minLength value="1"/>
            <xsd:whiteSpace value="collapse"/>
        </xsd:restriction>
    </xsd:simpleType>
    <xsd:element name="tblNewsHeader">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element name="tittle" type="Max300-NotEmpty" />
                <xsd:element name="description" type="Max300-NotEmpty" />
                <xsd:element ref="tblNews" />
                <xsd:element name="type" type="xsd:positiveInteger" />
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>
    <xsd:element name="tblNews">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element name="content" type="NotEmpty" />
                <xsd:element ref="tblImageList" minOccurs="0" maxOccurs="10"/>
                <xsd:element ref="catID" minOccurs="0" maxOccurs="10"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>
    <xsd:element name="tblImageList">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:any processContents="skip" minOccurs="0" maxOccurs="100"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>
    <xsd:element name="catID">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:any processContents="skip" minOccurs="0" maxOccurs="100"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>
</xsd:schema>
